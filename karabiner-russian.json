{
    "title": "For Russian",
    "rules": [
        {
            "description": "Change grave accent (`) to Ñ‘ in Russian layout",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "ru"
                                }
                            ]
                        }
                    ],
                    "type": "basic",
                    "from": <%= from("backslash", [], ["any"]) %>,
                    "to": <%= to([["non_us_backslash"]]) %>
                }
            ]
        }
    ]
}
